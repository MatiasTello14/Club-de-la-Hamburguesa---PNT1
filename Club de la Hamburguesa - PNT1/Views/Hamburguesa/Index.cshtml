@model IEnumerable<Club_de_la_Hamburguesa___PNT1.Models.Hamburguesa>

@{
    ViewData["Title"] = "Hamburguesas Disponibles";
}

<h1>Hamburguesas Disponibles</h1>

<div class="row">
    @foreach (var burger in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/@burger.ImagenUrl" class="card-img-top" alt="@burger.Nombre" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@burger.Nombre</h5>
                    <p class="card-text">@burger.Descripcion</p>
                    <p><strong>Precio:</strong> $@burger.Precio</p>
                </div>
                <div class="card-footer">
                    <form asp-controller="Carrito" asp-action="Agregar" method="post">
                        <input type="hidden" name="hamburguesaId" value="@burger.Id" />
                        <button type="submit" class="btn btn-success">Agregar al carrito</button>
                    </form>

                    <form asp-controller="Carrito" asp-action="Quitar" method="post" class="mt-2">
                        <input type="hidden" name="hamburguesaId" value="@burger.Id" />
                        <button type="submit" class="btn btn-danger">Quitar del carrito</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
