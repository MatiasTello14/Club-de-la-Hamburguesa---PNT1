@model Club_de_la_Hamburguesa___PNT1.Models.Pedido

<h1 class="confir">¡Pedido realizado con éxito!</h1>

<p class="confir"><strong>Fecha:</strong> @Model.Fecha</p>

<h3 class="confir">Detalle del pedido:</h3>
<ul>
    @foreach (var item in Model.Items)
    {
        <li class="confir">
            @item.Hamburguesa.Nombre — $@item.Hamburguesa.Precio x @item.Cantidad = <strong>$@(item.Hamburguesa.Precio * item.Cantidad)</strong>
        </li>
    }
</ul>

<p class="confir"><strong>Bebida:</strong> @Model.BebidaElegida (@((int)Model.BebidaElegida) $)</p>
<p class="confir"><strong>Ingrediente extra:</strong> @Model.IngredienteAdicional (@((int)Model.IngredienteAdicional) $)</p>

<hr />
<p class="confir"><strong>Total a pagar:</strong> <span style="font-size: 18px;">$@Model.ObtenerMontoTotal()</span></p>

<div class="boton">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Volver al inicio</a>
</div>